directory <- "C:/Users/adam.nguyen/Desktop/CDA/specdata"

##Return data
getmonitor <- function(id, directory, summarize=FALSE){
        filename <- paste0(directory,"/",id,".csv")        
        data <- read.csv(filename, header=TRUE)
        if(summarize==TRUE){print(summary(data))}
        return(data)                
}

data <- getmonitor("101", directory, summarize=TRUE)
head(data)



complete <- function(directory, id){
	##Get data
	for(i in id){
		i <- "002"
		data <- getmonitor(i, directory)
		data.table <- data.frame()
		data.table <- rbind(data.table, c(id=i, nobs=nrow(na.omit(data))))
		}
	return(data.table)
}
